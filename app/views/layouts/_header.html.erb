<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
      <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href=<%= root_path %>>bllbrd</a>
		      <% if current_user %>
			      	<div class="btn-group pull-right">
	        		<a class="btn dropdown-toggle dropdown" data-toggle="dropdown" href="#">
			          <i class="icon-user"></i> <%= current_user.nickname %>
			          <span class="caret"></span>
		          </a>
			        <ul class="dropdown-menu">
			          <li><a href="#">Profile</a></li>
			          <li class="divider"></li>
			          <li><a href="/signout">Sign Out</a></li>
			        </ul>
			      	</div>
			      	<%= link_to 'Add a song', new_song_path, class:'btn btn-primary pull-right' %>
		       <% else %>
		         <a class="btn btn-primary pull-right"  href="/auth/twitter">Login with Twitter</a>
					<% end %>
      <div class="container nav-collapse">
        <ul class="nav pull-left">
            <li><%= link_to "Hot 100", '/playlists/billboard-hot-100' %></li>
            <li><%= link_to "Playlists", playlists_path %></li>
            <li><%= link_to "Tags", tags_path  %></li>
            <li><%= link_to "Artists", artists_path  %></li>
            <li><%= link_to "All Songs", songs_path  %></li>
        </ul>
        <%= form_tag search_path, method: 'get', class: 'navbar-search pull-left' do %>
			    <%= text_field_tag :search, params[:search], class: 'search-query', placeholder: "Search" %>
				<% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</header>