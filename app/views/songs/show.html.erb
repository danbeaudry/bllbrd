<div class="row">
	<div class="span3"><img src="<%= @song.artwork %>" /></div>
	<div class="span9">
		<div class="row">
			<div class="span8">
				<h1><%= @song.name %></h1>
				
				<h2><%= link_to @song.artist_name, artist_path(@song.album_artist) %><% if @song.featuring_name %> featuring <%= link_to @song.featuring_name, artist_path(@song.featuring) %><% end %></h2>
				
				<h3><%= @song.album_name %></h3>
			</div>
			<div class="span1">
			  <%= link_to 'Edit', edit_song_path(@song), :class => 'btn' %>
			</div>
		</div>
		<br/>
		<div class="row">
			<div class="span3">
				<p><b>Year: </b><%= @song.year %></p>
				
				<p><b>Plays: </b><%= @song.plays %></p>
			</div>
			<div class="span3">
				<p><b>Tags: </b><% @song.tags.each do |tag| %><%= link_to tag.name, tag_path(tag) %><% end %></p>
				
				<p><b>Playlists: </b><% @song.playlists.each do |playlist| %><%= link_to playlist.name, playlist_path(playlist) %><% end %></p>
			</div>
	</div>
</div>

<div class="span12">
	<br/>
	<h1>Sources</h1>
	<br/>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Premium Services</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% if @song.rdio_hash['shortUrl'] %>
	  	<tr>
	  		<td><%= link_to "Play on Rdio", @song.rdio_hash['shortUrl'] %></td>
	  		<td></td>
	  	</tr>
	  	<% end %>
	  	<% if @song.spotify_hash['href'] %>
	  	<tr>
	  		<td><%= link_to "Play on Spotify", '//open.spotify.com/track/' + @song.spotify_hash['href'].split(':')[2] rescue '' %></td>
	  		<td></td>
	  	</tr>
	  	<% end %>
	  </tbody>
	  <thead>
	    <tr>
	      <th>MP3 Download (320 kbps)</th>
	      <th>Source</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @song.links.each do |link| %>
	      <tr>
	        <td><%= link_to link[:name], link[:url] %></td>
	        <td><%= link[:source] %></td>
	      </tr>
	    <% end %>
	    <tr>
	  		<td>Total Links</td>
	  		<td><%= @song.links.size %></td>
	  	</tr>
	  </tbody>
	</table>
</div>
