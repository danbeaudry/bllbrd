<h1>Search Results</h1>
<br/>
<% unless @songs.empty? %>
<h2>Songs</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Year</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.sort_by{|song| song.name}.each do |song| %>
      <tr>
        <td><%= link_to song.name, artist_album_song_path(song.album_artist, song.album, song) %></td>
        <td><%= link_to song.artist_name, artist_path(song.album_artist) %><% if song.featuring %> featuring <%= link_to song.featuring.name, artist_path(song.featuring) %><% end %></td>
        <td><%= song.album_name %></td>
        <td><%= song.year %></td>
        <td>
          <%= link_to 'Edit', edit_song_path(song), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
    <tr>
  		<td>Total Songs</td>
  		<td><%= @songs.size %></td>
  		<td></td>
  		<td></td>
  		<td></td>
  	</tr>
  </tbody>
</table>
<% end %>
<% unless @artists.empty? %>
<h2>Artists</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @artists.sort_by{|artist| artist.name.downcase}.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist_path(artist) %></td>
        <td>
          <%= link_to 'Edit', edit_artist_path(artist), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  	<tr>
  		<td>Total Artists</td>
  		<td><%= @artists.size %></td>
  	</tr>
  </tbody>
</table>
<% end %>
